<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button id="login" class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>

  <button type="button" id="signup" class="btn btn-outline-primary">sign up
    instead</button>

</div>

<script src="/js/login.js"></script>