<p class="text-right">welcome, <span id="username">{{username}}</span></p>

{{#if loggedOut}}
  <div class="text-center pt-5">
    <h2>🤔 it looks pretty empty here!</h2>
    <h3>try making a new post by pressing the
      <i class="bi bi-activity"></i>
      in the right corner
    </h3>
  </div>
{{else}}

  <nav>
    <ul class="dash-filters">
      <li id="filters"><i class="bi bi-bar-chart-fill"></i>filters:
      </li>
      <li><button>week</button></li>
      <li><button>month</button></li>
      <li><button>year</button></li>
    </ul>
  </nav>

  <div>
    <canvas id="myChart"></canvas>
  </div>
  {{#each logs as |log|}}

    <div class="card">
      <div class="card-body">
        <div class="row">
          <h6 class="col-2"><span id="log-emoji">🚴‍♀️</span></h6>
          <h6 class="col-10">{{log.workout_type}}</h6>
        </div>
        <div class="row justify-content-between align-items-center">
          <p class="card-text col-10 pt-1">{{formatLogDetails log.details}}</p>
          <a class="col-2" href="/api/logs/singleLog/{{log.id}}"><i
              class="bi bi-chevron-double-right more-details"
            ></i></a>
        </div>
        <div class="row">
          <h6>{{log.created_at}}, 86°F, 10:00am</h6>
        </div>

      </div>
    </div>

  {{/each}}

{{/if}}
<script src="/js/dashboard.js"></script>